<div class="row">
    
    <div class="card" style="width: 100%">
      <div class="card-header">
        <h4>Create new doc entry</h4>
      </div>
      <div class="card-body">
        <div>
          <%= form_with model: @doc, local: true do |form| %>
            <div class="row">
              <div class="col-lg-4">
                <div class="form-group">
                  <%= form.label 'Language' %><br>
                  <select class="form-control" name="doc_entry[language_id]">
                    <% @langs.each do |item| %>
                      <%= tag.option item.name, selected: (item.id == @doc.language_id), value: item.id %>
                    <% end %>
                  </select>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="form-group">
                  <%= form.label 'Topic' %><br>
                  <select class="form-control"  name="doc_entry[topic_id]">
                    <% @topics.each do |item| %>
                      <%= tag.option item.slug, selected: (item.id == @doc.topic_id), value: item.id %>
                    <% end %>
                  </select>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="form-group">
                  <%= form.label 'Version' %><br>
                  <select class="form-control" name="doc_entry[version_id]">
                    <% @versions.each do |item| %>
                      <option value="<%= item.id %>"><%= item.name %></option>
                    <% end %>
                  </select>
                </div>
              </div>
            </div>
            <div class="form-group">
              <%= form.label :title %><br>
              <%= form.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :abstract %><br>
              <%= form.text_field :abstract, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :content %><br>
              <%= form.text_area :content, class: "form-control" %>
            </div>
            <div class="row">
              <div class="col-lg-4">
                <div class="form-group">
                  <%= form.label 'After' %><br>
                  <select class="form-control">
                    <option value="0">First</option>
                    <% @topics.each do |item| %>
                      <option value="<%= item.id %>"><%= item.slug %></option>
                    <% end %>
                  </select>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="form-group">
                  <%= form.label 'Ref older topic' %><br>
                  <select class="form-control">
                    <option value="0">Root</option>
                    <% @topics.each do |item| %>
                      <option value="<%= item.id %>"><%= item.slug %></option>
                    <% end %>
                  </select>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="form-group">
                  <%= form.label 'Ref older version' %><br>
                  <select class="form-control">
                    <option value="0">First</option>
                    <% @versions.each do |item| %>
                      <option value="<%= item.id %>"><%= item.name %></option>
                    <% end %>
                  </select>
                </div>
              </div>
            </div>
            <%= form.submit 'Save', class: "btn btn-primary"%>
          <% end %>
        </div>
      </div>
  
</div>