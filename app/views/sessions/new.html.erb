<h1>UltraGen Docs Admin page</h1>
<p>You must be authorized to access this site</p>
<div class="row">
  <div class="col-lg-4 offset-lg-4">
    <div class="card">
      <div class="card-header">
        Enter your credentials
      </div>
      
      <div class="card-body">
        
          <%= form_with model: @user, local: true, url: :login_try_path do |form| %>
            <% flash.each do |type, msg| %>
              <div>
                <%= msg %>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :username %><br>
              <%= form.text_field :username, class: "form-control", html: {autocomplete: "off"}  %>
              
            </div>

            <div class="form-group">
              <%= form.label 'Password' %><br>
              <%= form.password_field :password, class: "form-control", html: {autocomplete: "off"}   %>
            </div>

            
              <%= form.submit 'Login', class: "btn btn-primary"%>
          <% end %>
      </div>
    </div>
  </div>
</div>