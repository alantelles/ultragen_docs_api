<%= render partial: 'layouts/errors', locals: {model: @version} %>
<div class="row">
    <div class="card" style="width: 100%">
      <div class="card-header">
        <h4>Edit version <%= @version.name %></h4>
      </div>
      <div class="card-body">
        <div>
          <%= form_with model: @version, local: true do |form| %>
            <div class="form-group">
              <%= form.label :name %><br>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :github_tag %><br>
              <%= form.text_field :github_tag, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :changelog %><br>
              <%= form.text_area :changelog, class: "form-control" %>
            </div>
            <%= form.submit 'Save', class: "btn btn-primary"%>
          <% end %>
        </div>
      </div>
  
</div>