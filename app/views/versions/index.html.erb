<h3>Versions</h3>
<div class="row">
  <% flash.each do |type, msg| %>
    <div class="alert alert-primary" style="width: 100%">
      <%= msg %>
    </div>
    
  <% end %>
  <table class="table table-bordered">
    <thead  class="thead-dark">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Github tag</th>
      </tr>
    </thead>
    <tbody>
      <% if @versions.length() > 0 %>
        <% @versions.each do |version| %>
        <tr>
          <td><%= version.id  %></td>
          <td><%= link_to version.name, version_path(version)  %></td>
          <td><%= version.github_tag  %></td>
        </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="3">No versions registered</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render partial: 'layouts/errors', locals: {model: @version} %>
<div class="row">
    <div class="card" style="width: 100%">
      <div class="card-header">
        <h4>New version</h4>
      </div>
      <div class="card-body">
        <div>
          <%= form_with model: @version, local: true do |form| %>
            <div class="form-group">
              <%= form.label :name %><br>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :github_tag %><br>
              <%= form.text_field :github_tag, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :changelog %><br>
              <%= form.text_area :changelog, class: "form-control" %>
            </div>
            <%= form.submit 'Save', class: "btn btn-primary"%>
          <% end %>
        </div>
      </div>
  
</div>