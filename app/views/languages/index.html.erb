<h3>Languages</h3>

  

<div class="row">
  
  <table class="table table-bordered">
    <thead  class="thead-dark">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Slug</th>
      </tr>
    </thead>
    <tbody>
      <% if @langs.length() > 0 %>
        <% @langs.each do |lang| %>
        <tr>
          <td><%= lang.id  %></td>
          <td><%= link_to lang.name, language_path(lang)  %></td>
          
          <td><%= lang.slug %></td>
        </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="3">No languages registered</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render partial: 'layouts/errors', locals: {model: @lang} %>
<div class="row">
    <div class="card" style="width: 100%">
      <div class="card-header">
        <h4>New language</h4>
      </div>
      <div class="card-body">
        <div>
          <%= form_with model: @lang, local: true do |form| %>
            <div class="form-group">
              <%= form.label :name %><br>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :slug %><br>
              <%= form.text_field :slug, class: "form-control" %>
            </div>
            <%= form.submit 'Save', class: "btn btn-primary"%>
          <% end %>
        </div>
      </div>
  
</div>