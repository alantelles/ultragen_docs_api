<%= render partial: 'layouts/errors', locals: {model: @lang} %>  
<div class="row">
    
    <div class="card" style="width: 100%">
      <div class="card-header">
        <h4>Edit language <%= @lang.name %></h4>
      </div>
      <div class="card-body">
        <div>
          <%= form_with model: @lang, local: true do |form| %>
            <div class="form-group">
              <%= form.label :name %><br>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :slug %><br>
              <%= form.text_field :slug, class: "form-control" %>
            </div>
            <%= form.submit 'Save', class: "btn btn-primary"%>
          <% end %>
        </div>
      </div>
  
</div>